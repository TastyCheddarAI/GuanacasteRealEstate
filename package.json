{
  "name": "guanacaste-real",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "functions/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build:packages && npm run build:web",
    "build:packages": "mkdir -p apps/web/packages && cp -r packages/* apps/web/packages/",
    "build:web": "npm run build --workspace=apps/web",
    "build:monorepo": "npm install && npm run build:packages && npm run build:web",
    "lint": "npm run lint --workspace=apps/web",
    "type-check": "npm run type-check --workspace=apps/web",
    "deploy": "npm run build:monorepo && npm run deploy:vercel",
    "deploy:vercel": "cd apps/web && vercel --prod"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@types/pg": "^8.15.5",
    "dotenv": "^17.2.3",
    "gray-matter": "^4.0.3",
    "pg": "^8.16.3"
  }
}
